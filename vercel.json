{
  "version": 2,
  "builds": [
    {
      "src": "api_handler.py",
      "use": "@vercel/python"
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api_handler.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "HUGGINGFACE_API_KEY": "@HUGGINGFACE_API_KEY",
    "DATABASE_URL": "@DATABASE_URL"
  }
}
